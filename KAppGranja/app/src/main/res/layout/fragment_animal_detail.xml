<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.kappgranja.ui.management.AnimalFormFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBrown"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="ANIMAL DETAILS"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewDetail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnDeleteDetail"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="348dp"
        android:layout_marginRight="348dp"
        android:layout_marginBottom="32dp"
        android:background="#FF9933"
        android:fontFamily="@font/roboto_medium"
        android:text="DELETE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnUpdateDetail"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout7" />

    <Button
        android:id="@+id/btnUpdateDetail"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="346dp"
        android:layout_marginLeft="346dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="33dp"
        android:background="#6D8764"
        android:fontFamily="@font/roboto_medium"
        android:text="UPDATE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetail" />

    <FrameLayout
        android:id="@+id/frameLayout7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="34dp"
        android:background="#FFFFFF"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDeleteDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewDetail"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:gravity="center">

            <LinearLayout
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:text="Name:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textNumber"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:text="ID Number:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textAge"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:text="Age:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textState"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:text="State:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textHealth"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:text="Health:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textSex"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:text="Sex:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textRace"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:text="Race:"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNameDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textNumberDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textAgeDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textStateDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textHealthDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textSexDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textRaceDetail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center|left"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/imageViewDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="33dp"
        android:background="#FFFFFF"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdateDetail"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_fondo_max" />

</androidx.constraintlayout.widget.ConstraintLayout>